<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_dark"
    tools:context=".Activity.SettingsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/rubik"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
        />

            <ImageView
                android:id="@+id/img_profile_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_310sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/placeholder"
          />


            <TextView
                android:id="@+id/txt_name_settings_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                tools:text="Display Name" />

            <TextView
                android:id="@+id/txt_online_settings_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="start|center_vertical"
                android:text="online"
                android:textColor="@color/purple_light"
                android:textSize="@dimen/_12ssp"
          />

            <TextView
                android:id="@+id/txt_about_me_settings_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="About Me"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
       />

            <TextView
                android:id="@+id/txt_status_settings_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:textColor="@color/purple_light"
                android:textSize="@dimen/_12ssp"
                tools:text="Status" />




            <Button
                android:id="@+id/btn_change_image_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_31sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/back_btn2"
                android:text="Change Photo"
                android:textColor="@color/white"
            />

            <Button
                android:id="@+id/btn_change_status_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/back_btn2"
                android:text="Change Status"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/white"
             />
        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>